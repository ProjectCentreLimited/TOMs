version: "3.8"

services:

  postgis:
    build:
      context: .
      dockerfile: dockerfile-toms-test-postgis
    hostname: toms_postgis2
    environment:
      - POSTGRES_PASSWORD=postgis
      - POSTGRES_DBNAME=gis
      - ALLOW_IP_RANGE=0.0.0.0/0
    volumes:
      - ../DATAMODEL:/io/DATAMODEL
      - ../test/data:/io/test/data
      - ../DOCKER/toms_test_db_init_scripts:/docker-entrypoint-initdb.d
    ports:
      - 5435:5432

  qgisserver:
    image: openquake/qgis-server:ltr
    hostname: qgis-server1
    environment:
      - PGSERVICEFILE=/io/pg_service/.pg_service.conf
    volumes:
    volumes:
      - ../DOCKER/pg_service:/io/pg_service
      - ../QGIS:/io/data
      - ../..:/io/plugins
      - ../QGIS/svg:/var/lib/qgis/.local/share/QGIS/QGIS3/profiles/default/svg
    ports:
      - 8011:80